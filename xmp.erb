<?xml version="1.0" encoding="UTF-8"?>
<x:xmpmeta xmlns:x="adobe:ns:meta/" x:xmptk="<%= tk %>">
 <rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#">
  <rdf:Description rdf:about=""
    xmlns:exif="http://ns.adobe.com/exif/1.0/"
    xmlns:xmp="http://ns.adobe.com/xap/1.0/"
    xmlns:xmpMM="http://ns.adobe.com/xap/1.0/mm/"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
<% if gps -%>
    exif:GPSVersionID="2.2.0.0" 
    exif:GPSLatitude="<%= gps[:lat] -%>"
    exif:GPSLongitude="<%= gps[:lon] -%>"
<% end -%>
    xmpMM:DerivedFrom="<%= file %>">
   <xmp:CreateDate><%= cdate %></xmp:CreateDate>
   <xmp:ModifyDate><%= mdate %></xmp:ModifyDate>
   <exif:UserComment>
    <rdf:Alt>
     <rdf:li xml:lang="x-default"><%= data %></rdf:li>
    </rdf:Alt>
   </exif:UserComment>
   <dc:creator>
    <rdf:Seq>
     <rdf:li><%= creator %></rdf:li>
    </rdf:Seq>
   </dc:creator>
   <dc:title>
    <rdf:Alt>
     <rdf:li xml:lang="x-default"><%= title %></rdf:li>
    </rdf:Alt>
   </dc:title>
   <dc:description>
    <rdf:Alt>
     <rdf:li xml:lang="x-default"><%= descr %></rdf:li>
    </rdf:Alt>
   </dc:description>
<% if tags -%>
   <dc:subject>
    <rdf:Seq>
<%   tags.each do |tag| -%>
     <rdf:li><%= tag %></rdf:li>
<%   end -%>
    </rdf:Seq>
   </dc:subject>
<% end -%>
  </rdf:Description>
 </rdf:RDF>
</x:xmpmeta>
